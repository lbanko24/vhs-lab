<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-table-rental" author="lbanko">
        <createTable tableName="rental">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="vhs_id" type="bigint"/>
            <column name="date_rented" type="date"/>
            <column name="date_due" type="date"/>
            <column name="date_returned" type="date"/>
        </createTable>
    </changeSet>

    <changeSet id="create-table-users" author="lbanko">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-fk-rental-to-users" author="lbanko">
        <addForeignKeyConstraint baseTableName="rental"
                                 baseColumnNames="user_id"
                                 constraintName="fk-rental-to-users"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create-table-vhs" author="lbanko">
        <createTable tableName="vhs">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="nvarchar(200)"/>
        </createTable>
    </changeSet>

    <changeSet id="add-fk-rental-to-vhs" author="lbanko">
        <addForeignKeyConstraint baseTableName="rental"
                                 baseColumnNames="vhs_id"
                                 constraintName="fk-rental-to-vhs"
                                 referencedTableName="vhs"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>